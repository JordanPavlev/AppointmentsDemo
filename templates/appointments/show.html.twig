{% extends 'base.html.twig' %}

{% block title %}
  Appointments
{% endblock %}

{% block body %}
  <h1>Appointment {{ appointment.id }}</h1>
  <dir class="d-flex  justify-content-end gap-2">
    <a class="btn btn-primary" href="{{ path('app_appointments_edit', { id: appointment.id }) }}">Edit</a>
    {{ include('appointments/_delete_form.html.twig') }}
  </dir>

  <table class="table">
    <tbody>
      <tr>
        <th>Serial number</th>
        <td>{{ appointment.id }}</td>
      </tr>
      <tr>
        <th>Time</th>
        <td>{{ appointment.timeAt ? appointment.timeAt|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>Client name</th>
        <td>{{ appointment.clientName }}</td>
      </tr>
      <tr>
        <th>Client email</th>
        <td>{{ appointment.clientEmail }}</td>
      </tr>
      <tr>
        <th>Client phone</th>
        <td>{{ appointment.clientPhone }}</td>
      </tr>
      <tr>
        <th>Created</th>
        <td>{{ appointment.createdAt ? appointment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
      <tr>
        <th>Last update</th>
        <td>{{ appointment.updatedAt ? appointment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
      </tr>
    </tbody>
  </table>
  <div class="d-flex justify-content-end">
    <a class="btn btn-primary" href="{{ path('app_appointments_index') }}">Back to list</a>
  </div>
{% endblock %}
