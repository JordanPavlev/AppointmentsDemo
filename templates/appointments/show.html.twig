{% extends 'base.html.twig' %}

{% block title %}Appointments{% endblock %}

{% block body %}
    <h1>Appointments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Time_at</th>
                <td>{{ appointment.timeAt ? appointment.timeAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Client_name</th>
                <td>{{ appointment.clientName }}</td>
            </tr>
            <tr>
                <th>Client_email</th>
                <td>{{ appointment.clientEmail }}</td>
            </tr>
            <tr>
                <th>Client_phone</th>
                <td>{{ appointment.clientPhone }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ appointment.createdAt ? appointment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ appointment.updatedAt ? appointment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_appointments_index') }}">back to list</a>

    <a href="{{ path('app_appointments_edit', {'id': appointment.id}) }}">edit</a>

    {{ include('appointments/_delete_form.html.twig') }}
{% endblock %}
